@page
@model CarRazor.Pages.CreateCarModel
@{
}

<h1>Create Car</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Car.RegNo"></label>
        <input asp-for="Car.RegNo" class="form-control" required/>
        <span asp-validation-for="Car.RegNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Brand"></label>
        <input asp-for="Car.Brand" class="form-control" required/>
        <span asp-validation-for="Car.Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Model"></label>
        <input asp-for="Car.Model" class="form-control" required/>
        <span asp-validation-for="Car.Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.HorsePower"></label>
        <input asp-for="Car.HorsePower" class="form-control" required/>
        <span asp-validation-for="Car.HorsePower" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Doors"></label>
        <input asp-for="Car.Doors" class="form-control" required/>
        <span asp-validation-for="Car.Doors" class="text-danger"></span>
    </div>
    <div>
        <br />
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>